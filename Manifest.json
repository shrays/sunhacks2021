{ 
	"name": "Speech to Text Extension",
    "description": "This extension discovers input boxes and enables speech accessibility.",
    "version": "1.0",
	"manifest_version": 3,
	"permissions": ["storage", "tabs", "activeTab"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"128": "icon.png"
		}
	},
	"content_scripts": 
	[
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["jquery-3.6.0.js", "server.js", "injection.js"],
			"run_at": "document_end"
		}
	],
	"icons": {
		"128": "icon.png"
	}
}